@model List<Northwind.EF.MVC.Models.UniversityView>
@{
    ViewBag.Title = "University List";
}

<div>
    <h2>@ViewBag.Title</h2>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr class="bg-primary">
                <th scope="col">Name</th>
                <th scope="col">Country</th>
                <th scope="col">State</th>
                <th scope="col">Web Page</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var university in Model)
            {
                <tr>
                    <td scope="row">@university.Name</td>
                    <td>@university.Country</td>
                    <td>@university.StateProvince</td>
                    <td>@university.WebPages</td>
                </tr>
            }
        </tbody>
    </table>
</div>